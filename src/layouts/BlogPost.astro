---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Cosmetic from '../components/Cosmetic.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import '../styles/text.css';

type Props = CollectionEntry<'blog'>['data'];

const { title, pubDate, updatedDate, heroImage } = Astro.props;
---

<!-- this is for the blog entry itself -->

<html lang="en">
	<head>
		<BaseHead title={title} />
		
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
				margin-top: 30px;
				
				display: flex;
				justify-content: center;
			}

			article {
				vertical-align: center;
				width: fit-content;
			}

			.hero-image {
				width: 100%;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 0px;
				box-shadow: var(--box-shadow);
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				max-height: 85vh;
				overflow-y: auto;
				margin: auto;
				/* margin-top: 20px; */
				padding: 1em;
				color: var(--text-normal);
				background-color: #2b2b2b2b;
			}
			.title {
				margin-bottom: 0em;
				padding: 1em 0 0 0;
				text-align: center;
				line-height: 1;
			}

			.date {
				margin-bottom: 0.5em;
				color: rgb(var(--gray));
			}
			.last-updated-on {
				font-style: italic;
			}
		</style>
	</head>

	<body>
		<Cosmetic/>
		<Header />
		<main>
			<article>
				<div class="prose anim-fadein anim-ease delay-200ms frosted-glass">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1 class="blogpost-title">{title}</h1>
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
