---
import BaseHead from '../../components/BaseHead.astro';
import Cosmetic from '../../components/Cosmetic.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import { SITE_TITLE } from '../../consts';
---
<!-- this is for the blog entry list -->

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} />
		
		<style>
			section {
				width: 100%;
				padding: 1em 0em 1em 0em;
				background: var(--background-light);

				display: flex;
				justify-content: center;
			}

			body {
				overflow-y: auto;
			}
			main {
				
				align-items: center;
			}

			#c_widget {
				width: 900px;
				max-width: 100%;
				pointer-events: all;
			}
		</style>
	</head>
	<body>
		<Cosmetic/>
		<Header />
		<main>
			<div id="c_widget"/>
			
		</main>
		<Footer />
		 <script src="/comment-widget/comment-widget.js" is:inline></script>
	</body>
</html>
