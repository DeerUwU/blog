---
import BaseHead from '../../components/BaseHead.astro';
import BlogCards from '../../components/BlogCards.astro';
import Cosmetic from '../../components/Cosmetic.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import { SITE_TITLE } from '../../consts';

---
<!-- this is for the blog entry list -->

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} />
		
		<style>
			main {
				max-width: 960px;
				height: -webkit-fill-available;
				max-height: 100%; /* firefox fix */
				
			}
			#entrylist {
				overflow-y: scroll;
				pointer-events: initial;
				padding-right: 10px;
				/* -webkit-mask-image: linear-gradient(180deg,rgba(0, 0, 0, 1) 0%, rgba(0, 0, 0, 1) 84%, rgba(0, 0, 0, 0) 100%); */
			}
		</style>
	</head>
	<body>
		<Cosmetic/>
		<Header />
		<main>
			<div id="entrylist">
				<BlogCards/>
			</div>
		</main>
		<Footer />
	</body>
</html>
