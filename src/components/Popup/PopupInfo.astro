<style>
	section {
        padding: 20px;
		width: 500px;
		height: fit-content;
	}

    .settings-titlebar {
        display: flex; 
        justify-content: space-between;
    }

    .settings-list {
        display: grid;
        gap: 10px;
    }
    .setting {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #2b2b2b2b;
        padding: 0px 10px;
    }

    .slider-value {
        width: 50px;
        text-align: right;
    }
</style>


