---
import SiteUpdate from '../components/SiteUpdate.astro';
---
<style>
	section {
		padding: 20px;
	}
	.site-updates {
		display: flex;
		flex-direction: column;
		gap: 5px;
		max-height: 500px;
		overflow-y: auto;
	}
</style>



